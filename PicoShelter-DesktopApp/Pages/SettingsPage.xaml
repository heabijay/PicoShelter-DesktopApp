<Page x:Class="PicoShelter_DesktopApp.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/" 
      xmlns:local="clr-namespace:PicoShelter_DesktopApp.Pages" 
      xmlns:viewmodels="clr-namespace:PicoShelter_DesktopApp.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="Settings">

    <Page.DataContext>
        <viewmodels:SettingsViewModel></viewmodels:SettingsViewModel>
    </Page.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock VerticalAlignment="Center" Padding="5" Margin="0 0 10 0">
            <Hyperlink FontSize="16pt" x:Name="btnGoBack" Click="btnGoBack_Click" TextDecorations="None" Foreground="Black">
                    <fa:FontAwesome Icon="ArrowLeft"></fa:FontAwesome>
             </Hyperlink>
        </TextBlock>

        <TextBlock Grid.Column="1" FontSize="20pt">Settings</TextBlock>

        <ScrollViewer Grid.Column="1" Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <StackPanel>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Column="0" Grid.Row="0" FontSize="16">Account:</TextBlock>
                        <TextBlock  Grid.Column="0" Grid.Row="1">
                            <Run>You're logined in as </Run>
                            <Run FontWeight="Bold" Text="{Binding Owner.CurrentUserString, Mode=OneWay}"></Run>
                        </TextBlock>
                        <TextBlock Grid.Column="1" Grid.RowSpan="2" Margin="5" VerticalAlignment="Center">
                            <Hyperlink TextDecorations="None">Logout</Hyperlink>
                        </TextBlock>
                    </Grid>

                    <Separator Margin="10 0"></Separator>

                    <WrapPanel Orientation="Horizontal" ScrollViewer.CanContentScroll="True">
                        <WrapPanel.Resources>
                            <Style x:Key="stackBlock" TargetType="StackPanel">
                                <Setter Property="Margin" Value="10"></Setter>
                            </Style>
                        </WrapPanel.Resources>
                        <StackPanel Style="{StaticResource stackBlock}">
                            <TextBlock FontSize="16" Margin="0 0 0 3">Upload</TextBlock>
                            <CheckBox>AutoRetry on Cooldown</CheckBox>
                        </StackPanel>
                        <StackPanel Style="{StaticResource stackBlock}">
                            <TextBlock FontSize="16" Margin="0 0 0 3">Misc</TextBlock>
                            <CheckBox>Open file after export</CheckBox>
                        </StackPanel>
                        <StackPanel Style="{StaticResource stackBlock}">
                            <TextBlock FontSize="16" Margin="0 0 0 3">Integration</TextBlock>
                            <CheckBox>Integrate to Context Menu</CheckBox>
                            <CheckBox>Integrate to Windows Start Menu</CheckBox>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
