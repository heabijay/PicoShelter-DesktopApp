<Page x:Class="PicoShelter_DesktopApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PicoShelter_DesktopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="Login">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock FontSize="14pt">
                <Hyperlink x:Name="btnGoBack" Click="btnGoBack_Click" TextDecorations="None" Foreground="Black">
                    <Run Text="" FontFamily="{StaticResource FontAwesome-Solid}"></Run>
                </Hyperlink>
            </TextBlock>
            <TextBlock FontSize="20pt" Margin="0 10">Login</TextBlock>
            <TextBlock Margin="0 10 0 0">Username/Email:</TextBlock>
            <TextBox></TextBox>
            <TextBlock Margin="0 10 0 0">Password:</TextBlock>
            <PasswordBox></PasswordBox>
            <Button Margin="0 10 0 0" Padding="5">Sign in</Button>
            <TextBlock Margin="0 10 0 0" FontSize="12" HorizontalAlignment="Center">
                <Hyperlink TextDecorations="None">Forgot password?</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
